<h2>Записаться</h2>

<form action="/visit" method="POST">

  <div class="form-group">
    <label>Ваше имя</label>
    <input name="client[name]" type="text" class="form-control" placeholder="Введите имя" value="<%= @c.name%>">
  </div>

  <div class="form-group">
    <label>Ваш телефон</label>
    <input name="client[phone]" type="text" class="form-control" placeholder="Введите телефон" value="<%= @c.phone%>">
  </div>

  <div class="form-group">
    <label>Когда Вас ждать?</label>
    <input id="datetimepicker" name="client[datestamp]" type="text" class="form-control" placeholder="Введите дату и время" value="<%= @c.datestamp%>">
  </div>



  <div class="form-group">
    <label>Цвет краски: </label>
    <select id="color" name="client[color]">
      <option value="#7bd148">Green</option>
      <option value="#5484ed">Bold blue</option>
      <option value="#a4bdfc">Blue</option>
      <option value="#46d6db">Turquoise</option>
      <option value="#7ae7bf">Light green</option>
      <option value="#51b749">Bold green</option>
      <option value="#fbd75b">Yellow</option>
      <option value="#ffb878">Orange</option>
      <option value="#ff887c">Red</option>
      <option value="#dc2127">Bold red</option>
      <option value="#dbadff">Purple</option>
      <option value="#e1e1e1">Gray</option>
    </select>
  </div>

  <div>
        <%if @message then %>
            <div class="alert alert-success"><%=@message%></div>
        <% end %>
  </div>

  <button type="submit" class="btn btn-primary">Записаться</button>
</form>